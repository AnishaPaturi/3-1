git clone https://github.com/AnishaPaturi/se-java-maven-final.git
cd se-java-maven-final
notepad docker-compose.yaml:
version: "3.9"

services:

  tomcat1:
    image: neksha/se-lab2-web-maven:latest
    container_name: tomcat-app
    ports:
      - "8081:8080"
    restart: always

  wordpress-db:
    image: mysql:8.0
    container_name: wordpress-db
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: wpdb
      MYSQL_USER: wpuser
      MYSQL_PASSWORD: wppass
    ports:
      - "3307:3306"
    volumes:
      - wpdb_data:/var/lib/mysql

  wordpress:
    image: wordpress:latest
    container_name: wordpress-site
    restart: always
    ports:
      - "8095:80"
    environment:
      WORDPRESS_DB_HOST: wordpress-db:3306
      WORDPRESS_DB_NAME: wpdb
      WORDPRESS_DB_USER: wpuser
      WORDPRESS_DB_PASSWORD: wppass
    depends_on:
      - wordpress-db
    volumes:
      - wp_content:/var/www/html

  nginx:
    image: nginx:latest
    container_name: nginx-server
    ports:
      - "8091:80"
    restart: always
    depends_on:
      - tomcat1
      - wordpress

volumes:
  wpdb_data:
  wp_content:


docker-compose up -d
to shut it : docker-compose down



version: '3.9'

services:

  db:
    image: mysql:5.7
    container_name: wordpress-db
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: rootpassword
      MYSQL_DATABASE: wordpress
      MYSQL_USER: wordpress
      MYSQL_PASSWORD: wordpress
    ports:
      - "3306:3306"

  wordpress:
    image: wordpress:latest
    container_name: wordpress-app
    restart: always
    ports:
      - "9070:80"  # Map port 80 of the container to port 9080 of the host
    environment:
      WORDPRESS_DB_HOST: db:3306
      WORDPRESS_DB_USER: wordpress
      WORDPRESS_DB_PASSWORD: wordpress
      WORDPRESS_DB_NAME: wordpress
    depends_on:
      - db








