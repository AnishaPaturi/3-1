  wpdb_data:
  wp_content:
































version: "3.9"

services:
  tomcat1:
    image: neksha/hub-myimg-prac1:latest   # your custom Tomcat web image
    container_name: tomcat-app
    ports:
      - "6020:8080"
    depends_on:
      - db

  db:
    image: mysql:8.0
    container_name: mysql-db
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: testdb
      MYSQL_USER: testuser
      MYSQL_PASSWORD: testpass
    ports:
      - "3307:3306"

  nginx:
    image: nginx:latest
    container_name: nginx-server
    ports:
      - "8081:80"

  tomcat2:
    image: tomcat:9.0
    container_name: tomcat-server
    ports:
      - "8082:8080"




